            @categories.Where(categories => categories.Id == Model.CategoryId).FirstOrDefault().Name
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.GeneralNote)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.GeneralNote)
        </dd>

        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.SpecialNote)
