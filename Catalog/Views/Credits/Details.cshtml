@model Catalog.Entities.Credit

@{
    ViewData["Title"] = "Details";
    var categories = ViewBag.categories as IEnumerable<Catalog.Entities.Category>;
}

<h1>Details</h1>

<div>
    <h4>Credit</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Percents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Percents)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Months)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Months)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Percents)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Percents)
        </dd>
        <dt class="col-sm-2">
            Category
        </dt>
