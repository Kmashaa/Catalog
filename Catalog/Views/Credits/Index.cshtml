@model IEnumerable<Catalog.Entities.Credit>

@{
    ViewData["Title"] = "Credits";
    var request = ViewContext.HttpContext.Request;
    var returnUrl = request.Path + request.QueryString.ToUriComponent();
    var categories = ViewBag.categories as IEnumerable<Catalog.Entities.Category>;

}


<div class="dropdown">
    <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
        Choose category
    </button>
    <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <a class="dropdown-item"
           asp-action="Index"
           asp-controller="Credits">All</a>
        @foreach (var item in categories)
        {
           <a class="dropdown-item"
           asp-action="Index"
           asp-controller="Credits"
           asp-route-group="@item.Id">@item.Name</a>
        }
    </ul>
</div>

<h1>Credits</h1>

<p>
    <a asp-action="Create">Create New credit <small>(only for employee)</small></a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Percents)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CategoryId)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Percents)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CategoryId)
            </td>
            <td>
                <a asp-action="Add"
               asp-controller="Credits"
               asp-route-id="@item.Id"
               asp-route-returnUrl="@returnUrl"
               class="btn btn-primary">
                    <i class="fa fa-shopping-cart"></i> В корзину
                </a>
                </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit <small>(only for employee)</small></a> |
                    <a asp-action="Details" asp-route-id="@item.Id">Details <small>(only for employee)</small></a> |
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete <small>(only for employee)</small></a>
            </td>
        </tr>
}
    </tbody>
</table>
